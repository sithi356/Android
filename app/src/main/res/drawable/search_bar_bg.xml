<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />  <!-- White background color -->

    <!-- Rounded Corners -->
    <corners android:radius="16dp" />  <!-- Adjust the radius for rounded corners -->

    <!-- Border (Optional) -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" />  <!-- Light gray border -->

    <!-- Padding inside the search bar (Optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Shadow Effect (Optional, API 21+) -->
    <shadow
        android:color="#22000000"


    android:radius="4dp" />
</shape>
