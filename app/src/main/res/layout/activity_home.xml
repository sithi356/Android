<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5F9">

    <!-- Top Header Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00B341"
        android:padding="16dp">

        <!-- App Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Swadeshi Bazar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <!-- Notification Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notification"
            app:tint="#FF5722" />
    </LinearLayout>

    <!-- Buy Product and Book Service Buttons -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_below="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/buyButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Buy Product"
            android:backgroundTint="#00B341"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/sellButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Sell Product"
            android:backgroundTint="#E7F6E9"
            android:textColor="#00B341"/>
    </LinearLayout>

    <!-- Best Seed Banner -->

    <ImageView
        android:id="@+id/bannerSection"
        android:layout_below="@+id/buttonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/add" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_below="@+id/bannerSection"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="@drawable/search2"
        android:hint="Search Product"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/search_bar_background"
        android:textColor="#6D6D6D"
        android:textColorHint="#BDBDBD"
        android:gravity="center_vertical"
        android:backgroundTint="#E7F6E9"/>

    <!-- Grid Layout for Categories -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:padding="16dp">

        <!-- Seed -->
        <LinearLayout
            android:id="@+id/seedsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/seed" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seeds"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>

        <!-- Crops -->
        <LinearLayout
            android:id="@+id/cropsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/wheat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crops"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>

        <!-- Livestock -->
        <LinearLayout
            android:id="@+id/livestockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/livestock" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livestock"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>

        <!-- Soil -->
        <LinearLayout
            android:id="@+id/soilButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/soil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>

        <!-- Vegetables -->
        <LinearLayout
            android:id="@+id/vegetableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/vegetable" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetables"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/homemadeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/hmade" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homemade"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>

    </GridLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:tint="#00B341" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Home"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Buy/Sell Button -->
        <LinearLayout
            android:id="@+id/buySellButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/buy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Buy/Sell"
                android:textColor="#6D6D6D"
                android:textSize="12sp"
                android:fontFamily="@font/alfa_slab_one"/>
        </LinearLayout>

        <!-- Get Loan Button -->
        <LinearLayout
            android:id="@+id/getLoanButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/news" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="News"
                android:textColor="#6D6D6D"
                android:textSize="12sp"
                android:fontFamily="@font/alfa_slab_one"/>
        </LinearLayout>

        <!-- Account Button -->
        <LinearLayout
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Account"
                android:textColor="#6D6D6D"
                android:textSize="12sp"
                android:fontFamily="@font/alfa_slab_one"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>